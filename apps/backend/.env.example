# Database
DATABASE_URL=postgresql://cartulary:changeme@postgres:5432/cartulary

# Redis & Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=/data/documents

# Authentication
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME=Cartulary
DEBUG=true
API_V1_PREFIX=/api/v1

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:8080"]

# Vision OCR (Phase 2 - LLM-based text extraction)
OCR_ENABLED=false
VISION_OCR_MODEL=minicpm-v  # Ollama vision model for text extraction (uses LLM_BASE_URL)

# Embeddings (Phase 3)
EMBEDDING_PROVIDER=ollama  # local, openai, ollama
EMBEDDING_MODEL=nomic-embed-text  # For local: all-MiniLM-L6-v2, For OpenAI: text-embedding-3-small, For Ollama: nomic-embed-text
EMBEDDING_DIMENSION=768  # 384 for MiniLM, 768 for nomic-embed-text, 1536 for OpenAI
EMBEDDING_CHUNK_SIZE=500
EMBEDDING_CHUNK_OVERLAP=50

# LLM (Phase 4 - Optional)
LLM_ENABLED=false
LLM_PROVIDER=ollama
LLM_MODEL=llama2
LLM_BASE_URL=http://localhost:11434
LLM_API_KEY=

# OIDC (Phase 7 - Optional)
OIDC_ENABLED=false
OIDC_DISCOVERY_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=

# Import Sources (Phase 6)
WATCH_DIRECTORIES=[]
IMAP_ENABLED=false
IMAP_SERVER=
IMAP_PORT=993
IMAP_USERNAME=
IMAP_PASSWORD=
IMAP_FOLDER=INBOX
IMAP_PROCESSED_FOLDER=Processed
